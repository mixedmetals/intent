{
  "name": "intent-core",
  "version": "2.0.0",
  "description": "Core schema definition, compiler, and validator for Intent styling framework",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mixedmetals/intent-framework",
    "directory": "packages/core"
  },
  "keywords": [
    "intent",
    "css",
    "design-system",
    "schema",
    "ai",
    "styling",
    "compiler"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./compiler": {
      "types": "./dist/compiler/index.d.ts",
      "import": "./dist/compiler/index.js",
      "default": "./dist/compiler/index.js"
    },
    "./styles": "./dist/intent.css",
    "./styles/components": "./dist/intent-components.css"
  },
  "scripts": {
    "build": "tsc && cp css/intent-theme.css dist/intent.css && cp css/components.css dist/intent-components.css",
    "dev": "tsc --watch",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "@playwright/test": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "@playwright/test": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

{
  "name": "intent-react",
  "version": "2.0.0",
  "description": "React components for Intent styling framework",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mixedmetals/intent-framework",
    "directory": "packages/react"
  },
  "keywords": [
    "intent",
    "react",
    "components",
    "design-system",
    "ai",
    "styling"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "default": "./dist/hooks/index.js"
    },
    "./components/motion": {
      "types": "./dist/components/motion/index.d.ts",
      "import": "./dist/components/motion/index.js",
      "default": "./dist/components/motion/index.js"
    },
    "./components/data": {
      "types": "./dist/components/data/index.d.ts",
      "import": "./dist/components/data/index.js",
      "default": "./dist/components/data/index.js"
    },
    "./components/navigation": {
      "types": "./dist/components/navigation/index.d.ts",
      "import": "./dist/components/navigation/index.js",
      "default": "./dist/components/navigation/index.js"
    },
    "./components/form": {
      "types": "./dist/components/form/index.d.ts",
      "import": "./dist/components/form/index.js",
      "default": "./dist/components/form/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "default": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "intent-core": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
